# ============================================
# Soroban Ajo - Environment Configuration
# ============================================
# Copy this file to .env.local and update with your values
# Never commit .env.local to version control

# ============================================
# Application Environment
# ============================================
# Options: development, staging, production
VITE_APP_ENV=development

# Application Name
VITE_APP_NAME=Soroban Ajo

# Application Version
VITE_APP_VERSION=0.1.0

# ============================================
# Soroban/Stellar Network Configuration
# ============================================
# Stellar Network: testnet, mainnet, futurenet
VITE_STELLAR_NETWORK=testnet

# Soroban RPC URL
# Testnet: https://soroban-testnet.stellar.org
# Mainnet: https://soroban-mainnet.stellar.org
# Futurenet: https://rpc-futurenet.stellar.org
VITE_SOROBAN_RPC_URL=https://soroban-testnet.stellar.org

# Horizon URL (for account/transaction queries)
# Testnet: https://horizon-testnet.stellar.org
# Mainnet: https://horizon.stellar.org
VITE_HORIZON_URL=https://horizon-testnet.stellar.org

# Network Passphrase
# Testnet: Test SDF Network ; September 2015
# Mainnet: Public Global Stellar Network ; September 2015
# Futurenet: Test SDF Future Network ; October 2022
VITE_STELLAR_NETWORK_PASSPHRASE=Test SDF Network ; September 2015

# ============================================
# Smart Contract Configuration
# ============================================
# Your deployed Ajo contract ID
VITE_SOROBAN_CONTRACT_ID=

# Contract deployment network
VITE_CONTRACT_NETWORK=testnet

# ============================================
# Wallet Configuration
# ============================================
# Default wallet to suggest (freighter, albedo)
VITE_DEFAULT_WALLET=freighter

# Enable wallet auto-connect
VITE_WALLET_AUTO_CONNECT=false

# ============================================
# API Configuration
# ============================================
# Backend API URL (if applicable)
VITE_API_URL=http://localhost:3000

# API Timeout (milliseconds)
VITE_API_TIMEOUT=30000

# ============================================
# Feature Flags
# ============================================
# Enable debug mode
VITE_DEBUG=false

# Enable analytics
VITE_ENABLE_ANALYTICS=false

# Enable error reporting
VITE_ENABLE_ERROR_REPORTING=false

# Enable maintenance mode
VITE_MAINTENANCE_MODE=false

# ============================================
# UI Configuration
# ============================================
# Default theme (light, dark, system)
VITE_DEFAULT_THEME=light

# Enable animations
VITE_ENABLE_ANIMATIONS=true

# Items per page for pagination
VITE_ITEMS_PER_PAGE=10

# ============================================
# Transaction Configuration
# ============================================
# Transaction timeout (seconds)
VITE_TX_TIMEOUT=30

# Max transaction fee (stroops)
VITE_MAX_TX_FEE=100000

# Default slippage tolerance (percentage)
VITE_DEFAULT_SLIPPAGE=0.5

# ============================================
# Monitoring & Analytics
# ============================================
# Sentry DSN (for error tracking)
VITE_SENTRY_DSN=

# Google Analytics ID
VITE_GA_ID=

# Mixpanel Token
VITE_MIXPANEL_TOKEN=

# ============================================
# Development Tools
# ============================================
# Enable React DevTools
VITE_ENABLE_DEVTOOLS=true

# Enable Redux DevTools
VITE_ENABLE_REDUX_DEVTOOLS=true

# Log level (error, warn, info, debug)
VITE_LOG_LEVEL=info

# ============================================
# Security
# ============================================
# Enable HTTPS in development
VITE_HTTPS=false

# CORS allowed origins (comma-separated)
VITE_CORS_ORIGINS=http://localhost:5173,http://localhost:3000

# ============================================
# Performance
# ============================================
# Enable service worker
VITE_ENABLE_SW=false

# Cache duration (seconds)
VITE_CACHE_DURATION=3600

# ============================================
# Social & External Links
# ============================================
VITE_GITHUB_URL=https://github.com/Emmyt24/soroban-ajo
VITE_DISCORD_URL=
VITE_TWITTER_URL=
VITE_DOCS_URL=
